<div class="container text-center mt-3 mb-3 col-md-8">
   <form class="card bg-light ml-3 mr-3" action="/student/create" method="post">
      <h1 class="text text-primary mt-2 mb-2">Add new student</h1>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Full name</label>
         <input class="form-control" type="text" name="full_name" required minlength="3" maxlength="30">
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Birth year</label>
         <input class="form-control" type="number" name="birth_year" required min="1900" max="2023">
      </div>
      <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Grade</label>
            <input class="form-control" type="text" name="grade" required minlength="3" maxlength="30">
      </div>
      <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Gender</label><br>
            <input type="radio" name="gender" value="Male"> Male
            <input type="radio" name="gender" value="Female"> Female
      </div>
      <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Email</label>
            <input class="form-control" type="email" name="email" required minlength="3" maxlength="30">
      </div>
      <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Image</label>
            <input class="form-control" type="text" name="image" required>
      </div>
      <div class="form-group mt-2 mb-2">
         <input class="btn btn-danger" type="submit" value="Add">
      </div>
   </form>
</div>